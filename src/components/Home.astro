---
import illustration from '../assets/justin-dog-mountains.svg';
import paperBackground from '../assets/paper-background.jpeg';
import mandySong from '../assets/MandyConnell-Theme_COUNTRY.mp3';

import NewsletterForm from './NewsletterForm.astro';
---

<div class="container">
    <img id="background" src={paperBackground.src} alt="" fetchpriority="high" />

    <main>
      <div class="title">Colorado Justin</div>

      <div class="links-collection">
        <div class="links contact-collab">
          <span>Contact / Collaborate: </span>
          <br />
          <a href="mailto:justin@coloradojustin.com">justin@coloradojustin.com</a>
        </div>
    
        <div class="links audio-player">
          <span>Mandy Connell Theme Song: </span>
          <br />
          <audio controls preload="auto">
            <source src={mandySong} type="audio/mpeg" />
            Your browser does not support the audio element.
          </audio>
          <br />
          <a href={mandySong} download>Free Download</a>
        </div>
    
        <div class="links instagram">
          <span>Instagram: </span>
          <br />
          <a href="https://www.instagram.com/justinfromcolorado" target="_blank">@justinfromcolorado</a>
        </div>
      </div>
  
      <div class="illustration">
        <img src={illustration.src} alt="Justin sitting on a cow fence with a guitar and his dog. Tetons in the background." />
      </div>
  </main>

  <footer>
    <NewsletterForm />  
    <span>&copy; 2025 Justin Renaud. All rights reserved.</span>
  </footer>
</div>

<style>
    :root {
      --blue: #0054ff;
      --red: #ec1845;
      --grey: #786c68;
      --background: #fcecd3;
    }
    
    #background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    body {
      font-family: Arial Black, Arial, Helvetica, sans-serif;
      background-color: var(--background);
      color: var(--grey);
      margin: 0;
      font-size: 1rem;
      padding: 0;
      text-transform: uppercase;
    }

    main {
      max-width: 100%;
      overflow: clip;
    }

    .container {
      text-align: center;
      padding: 2rem 0;
    }

    .title {
      font-family: Arbutus, Arial Black, Arial, Helvetica, sans-serif;
      font-size: 56px;
      color: var(--red);
      font-weight: bold;
      margin-bottom: 1.5rem;
      position: relative;
      left: -100%;
      animation: slideIn 1.5s ease-out forwards;
    }

    @keyframes slideIn {
      from {
        left: -100%;
      }
      to {
        left: 0;
      }
    }

    .links-collection {
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      gap: 1rem;
      line-height: 1.375;
    }

    a {
      color: var(--blue);
      text-decoration: none;
      margin: 0 1rem;
      padding: 0.2rem 0.5rem;
      background-color: transparent;
      transition: all 0.3s ease;
    }

    a:hover {
      background-color: var(--blue);
      color: var(--background);
      text-decoration: none;
    }

    /* mobile order */
    .contact-collab {
      order: 2;
    }
    .audio-player {
      order: 1;
    }
    .instagram {
      order: 3;
    }

    .illustration {
      margin-top: 2rem;
    }

    .illustration img {
      width: 208%;
      height: auto;
      max-width: 1280px;
      left: -50%; /* just past edge of guitar */
      position: relative;
      mix-blend-mode: multiply;
    }

    footer {
      margin-top: 1rem;
      font-size: 0.9rem;
    }

    @media screen and (min-width: 720px) {
      .illustration img {
        left: -12%;
        width: 130%;
      }
    }

    @media screen and (min-width: 960px) {
      .illustration img {
        width: 100%;
        left: 0;
      }
    }


    @media screen and (min-width: 1080px) {
      .title {
        font-size: 108px;
      }

      body {
        font-size: 1.25rem;
      }

      .links-collection {
        flex-direction: row;
        gap: 2rem;
        max-height: 90px;
        margin: 0 2rem;
        overflow: visible;
      }

      .contact-collab {
        order: 1;
      }
      .audio-player {
        order: 2;
      }
      .instagram {
        order: 3;
      }
    }
  </style>